<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="80dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Profile Picture Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="223dp"
                    android:layout_height="172dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:src="@drawable/rounded_corner" />

            </LinearLayout>

            <!-- Name Field -->
            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/field_background"
                android:padding="8dp" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter Your Name"
                android:text="John Doe"
                android:inputType="text"
                android:padding="7dp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Email Field -->
            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="john.doe@example.com"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/field_background"
                android:padding="8dp" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edittext_background"
                android:hint="Enter Your Email"
                android:text="john.doe@example.com"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Enrollment No Field -->
            <TextView
                android:id="@+id/enrollmentLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enrollment No"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/enrollmentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12345678"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/field_background"
                android:padding="8dp" />

            <EditText
                android:id="@+id/enrollmentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter Your Enrollment No"
                android:text="12345678"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="7dp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Department Field -->
            <TextView
                android:id="@+id/departmentLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/departmentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information Tech"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/field_background"
                android:padding="8dp" />

            <EditText
                android:id="@+id/departmentEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter Your Department"
                android:text="Information Tech"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="7dp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Contact Field -->
            <TextView
                android:id="@+id/contactLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/contactTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/field_background"
                android:padding="8dp" />

            <EditText
                android:id="@+id/contactEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter Your Contact"
                android:text="1234567890"
                android:inputType="phone"
                android:minHeight="48dp"
                android:padding="7dp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Address Field -->
            <TextView
                android:id="@+id/addresslabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A1 Coder Street"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/field_background"
                android:padding="8dp" />

            <EditText
                android:id="@+id/addressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_background"
                android:hint="Enter Your Address"
                android:inputType="textMultiLine"
                android:minHeight="48dp"
                android:padding="7dp"
                android:textColor="#707070"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="372dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:padding="12dp"
                android:text="Edit Profile"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>